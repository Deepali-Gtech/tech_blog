<div class="row mt-4">
  <div class="col-md-6">
    <div class="col-md-4">
      <a href="/newblog" class="btn btn-sm btn-danger">Create Blog</a>
    </div>

    {{#if blogs.length}}
    <div class="col-md-6 project-list">
      <h3>Current Projects:</h3>

      {{#each blogs as |blog|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/blog?id={{blog.id}}">{{blog.title}}</a></h4>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>

  <script src="./js/dashboard.js"></script>