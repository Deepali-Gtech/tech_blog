<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Blog</h3>

  <input type="hidden" id="blog-id" name="blog-id" value="{{blog.id}}">
    <form class="form new-project-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="title" name="title" value="{{blog.title}}"/>
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-input" id="content" name="content">{{blog.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Blog</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/blog.js"></script>
