<h3>Post Comments</h3>

<input type="hidden" id="blog-id" name="blog-id" value="{{blog.id}}">

<div>
  <label>Title:</label>
  <label>{{blog.title}}</label>
</div>

<div>
  <label>Content:</label>
  <label>{{blog.content}}</label>
</div>
<br>

{{#each comments as |comment|}}
<div>
  <div class="row mt-4" style="background-color: brown;">
    <div class="col-md-6">
      {{comment.content}}
    </div>

    <div class="col-md-6">
      Posted by {{comment.user.name}} on {{format_date comment.date_created}}
    </div>
  </div>


</div>
<br>
{{/each}}

<form class="form new-project-form">
  <div class="form-group">
    <textarea class="form-input" id="content" name="content"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Post Comment</button>
  </div>
</form>


<script src="./js/comment.js"></script>